{% comment %}
  Instagram Stories - Estilo Dropverse
  Muestra stories de clientes en formato Instagram
{% endcomment %}

<style>
  .instagram-stories-section {
    padding: 3rem 0;
    background: {{ section.settings.section_bg }};
  }

  .stories-heading {
    text-align: center;
    font-size: 24px;
    font-weight: 700;
    margin-bottom: 2rem;
    color: {{ section.settings.heading_color }};
  }

  .stories-container {
    display: flex;
    gap: 1.5rem;
    overflow-x: auto;
    padding: 1rem 0;
    scroll-behavior: smooth;
    -webkit-overflow-scrolling: touch;
  }

  .stories-container::-webkit-scrollbar {
    height: 6px;
  }

  .stories-container::-webkit-scrollbar-track {
    background: #f1f1f1;
    border-radius: 10px;
  }

  .stories-container::-webkit-scrollbar-thumb {
    background: {{ section.settings.scrollbar_color }};
    border-radius: 10px;
  }

  .story-item {
    flex: 0 0 auto;
    text-align: center;
    cursor: pointer;
    transition: transform 0.3s ease;
  }

  .story-item:hover {
    transform: scale(1.05);
  }

  .story-circle {
    width: {{ section.settings.story_size }}px;
    height: {{ section.settings.story_size }}px;
    border-radius: 50%;
    padding: 3px;
    background: linear-gradient(45deg, #f09433 0%, #e6683c 25%, #dc2743 50%, #cc2366 75%, #bc1888 100%);
    margin: 0 auto 0.5rem;
  }

  .story-image-wrapper {
    width: 100%;
    height: 100%;
    border-radius: 50%;
    overflow: hidden;
    border: 3px solid white;
  }

  .story-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .story-username {
    font-size: 12px;
    color: #333;
    font-weight: 500;
    max-width: {{ section.settings.story_size }}px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  @media screen and (max-width: 749px) {
    .stories-container {
      padding: 1rem 1.5rem;
    }
  }
</style>

<div class="instagram-stories-section">
  <div class="page-width">
    
    {% if section.settings.heading != blank %}
      <h2 class="stories-heading">{{ section.settings.heading }}</h2>
    {% endif %}

    <div class="stories-container">
      {% for block in section.blocks %}
        {% if block.type == 'story' %}
          <div class="story-item" {{ block.shopify_attributes }}>
            <div class="story-circle">
              <div class="story-image-wrapper">
                {% if block.settings.image != blank %}
                  <img 
                    src="{{ block.settings.image | image_url: width: 200 }}" 
                    alt="{{ block.settings.username }}"
                    class="story-image"
                    loading="lazy">
                {% else %}
                  <div style="width: 100%; height: 100%; background: #E0E0E0;"></div>
                {% endif %}
              </div>
            </div>
            <div class="story-username">{{ block.settings.username }}</div>
          </div>
        {% endif %}
      {% endfor %}
    </div>

  </div>
</div>

{% schema %}
{
  "name": "Instagram Stories",
  "settings": [
    {
      "type": "header",
      "content": "Configuración General"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Título de la sección",
      "default": "Instagram stories"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Color del título",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "section_bg",
      "label": "Color de fondo",
      "default": "#FFFFFF"
    },
    {
      "type": "header",
      "content": "Estilos de Stories"
    },
    {
      "type": "range",
      "id": "story_size",
      "label": "Tamaño de las stories",
      "min": 60,
      "max": 120,
      "step": 10,
      "default": 80,
      "unit": "px"
    },
    {
      "type": "color",
      "id": "scrollbar_color",
      "label": "Color de la barra de scroll",
      "default": "#0059B2"
    }
  ],
  "blocks": [
    {
      "type": "story",
      "name": "Story",
      "limit": 15,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Imagen de la story"
        },
        {
          "type": "text",
          "id": "username",
          "label": "Nombre de usuario",
          "default": "Usuario"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Instagram Stories",
      "blocks": [
        {
          "type": "story",
          "settings": {
            "username": "Laura_M"
          }
        },
        {
          "type": "story",
          "settings": {
            "username": "Stephanie"
          }
        },
        {
          "type": "story",
          "settings": {
            "username": "Dropverse"
          }
        }
      ]
    }
  ]
}
{% endschema %}
