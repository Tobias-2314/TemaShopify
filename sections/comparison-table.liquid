{% comment %}
  Tabla Comparativa - ¿Por qué elegirnos?
  Estilo Dropverse
{% endcomment %}

<style>
  .comparison-section {
    padding: 3rem 0;
    background: {{ section.settings.section_bg }};
  }

  .comparison-heading {
    text-align: center;
    font-size: 28px;
    font-weight: 700;
    margin-bottom: 1rem;
    color: {{ section.settings.heading_color }};
  }

  .comparison-subheading {
    text-align: center;
    font-size: 16px;
    color: #666;
    margin-bottom: 2.5rem;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .comparison-table {
    max-width: 700px;
    margin: 0 auto;
    background: white;
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
  }

  .comparison-header {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr;
    background: {{ section.settings.header_bg }};
    padding: 1.5rem 1rem;
    font-weight: 700;
    color: {{ section.settings.header_color }};
  }

  .comparison-row {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr;
    padding: 1.25rem 1rem;
    border-bottom: 1px solid #F0F0F0;
    align-items: center;
  }

  .comparison-row:last-child {
    border-bottom: none;
  }

  .comparison-row:nth-child(even) {
    background: #FAFAFA;
  }

  .comparison-feature {
    font-size: 15px;
    color: #333;
    font-weight: 500;
  }

  .comparison-check {
    text-align: center;
    font-size: 24px;
  }

  .check-yes {
    color: {{ section.settings.check_color }};
  }

  .check-no {
    color: {{ section.settings.cross_color }};
  }

  @media screen and (max-width: 749px) {
    .comparison-header,
    .comparison-row {
      grid-template-columns: 3fr 1fr 1fr;
      font-size: 14px;
    }

    .comparison-feature {
      font-size: 13px;
    }
  }
</style>

<div class="comparison-section">
  <div class="page-width">
    
    {% if section.settings.heading != blank %}
      <h2 class="comparison-heading">{{ section.settings.heading }}</h2>
    {% endif %}

    {% if section.settings.subheading != blank %}
      <p class="comparison-subheading">{{ section.settings.subheading }}</p>
    {% endif %}

    <div class="comparison-table">
      <div class="comparison-header">
        <div></div>
        <div style="text-align: center;">{{ section.settings.column1_name }}</div>
        <div style="text-align: center;">{{ section.settings.column2_name }}</div>
      </div>

      {% for block in section.blocks %}
        {% if block.type == 'feature' %}
          <div class="comparison-row" {{ block.shopify_attributes }}>
            <div class="comparison-feature">{{ block.settings.feature_text }}</div>
            <div class="comparison-check">
              {% if block.settings.column1_has %}
                <span class="check-yes">✓</span>
              {% else %}
                <span class="check-no">✗</span>
              {% endif %}
            </div>
            <div class="comparison-check">
              {% if block.settings.column2_has %}
                <span class="check-yes">✓</span>
              {% else %}
                <span class="check-no">✗</span>
              {% endif %}
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>

  </div>
</div>

{% schema %}
{
  "name": "Tabla Comparativa",
  "settings": [
    {
      "type": "header",
      "content": "Textos"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Título",
      "default": "¿Por qué elegirnos?"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subtítulo",
