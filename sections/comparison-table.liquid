          "default": true
        },
        {
          "type": "checkbox",
          "id": "column2_has",
          "label": "Columna 2 tiene esta característica",
          "default": false
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Tabla Comparativa",
      "blocks": [
        {
